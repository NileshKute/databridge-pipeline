# App
APP_NAME=DataBridge
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database (your existing PostgreSQL)
DATABASE_URL=postgresql+asyncpg://databridge_user:your_password@localhost:5432/databridge_db

# Redis (install locally: sudo apt install redis-server)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# LDAP (your studio Active Directory)
LDAP_ENABLED=true
LDAP_SERVER=ldap://your-ad-server:389
LDAP_USE_SSL=false
LDAP_BASE_DN=dc=yourstudio,dc=com
LDAP_USER_DN=ou=users,dc=yourstudio,dc=com
LDAP_GROUP_DN=ou=groups,dc=yourstudio,dc=com
LDAP_BIND_DN=cn=databridge,ou=services,dc=yourstudio,dc=com
LDAP_BIND_PASSWORD=your_bind_password

# ShotGrid (your studio instance)
SHOTGRID_ENABLED=true
SHOTGRID_URL=https://yourstudio.shotgrid.autodesk.com
SHOTGRID_SCRIPT_NAME=databridge
SHOTGRID_API_KEY=your_api_key
SHOTGRID_PROJECT_ID=0

# JWT
JWT_SECRET_KEY=change-this-to-a-64-char-random-string

# File Paths (network mounts on your server)
STAGING_NETWORK_PATH=/mnt/staging
PRODUCTION_NETWORK_PATH=/mnt/production
UPLOAD_TEMP_PATH=/tmp/databridge_uploads
MAX_UPLOAD_SIZE_GB=50

# Transfer
TRANSFER_METHOD=rsync

# SMTP (studio email server)
SMTP_HOST=smtp.yourstudio.com
SMTP_PORT=587
SMTP_FROM_EMAIL=databridge@yourstudio.com
NOTIFICATION_ENABLED=true

# ClamAV (if installed locally)
CLAMAV_ENABLED=false
